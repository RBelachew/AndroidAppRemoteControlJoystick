<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <data>
        <variable
            name="viewModel"
            type="com.example.even3android.viewmodel.ViewModel" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_gravity="center"
            android:layout_margin="8dp">

            <EditText
                android:id="@+id/inIp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="IP"
                android:inputType="text"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/inPort"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/inPort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Port"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/inConnect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inIp" />

            <Button
                android:id="@+id/inConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                tools:ignore="OnClick"
                android:text="Connect"
                app:layout_constraintBottom_toTopOf="@+id/throttleBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inPort" />

            <com.example.even3android.views.VerticalSeekBar
                android:id="@+id/throttleBar"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                app:layout_constraintBottom_toTopOf="@+id/throttleBar"
                bind:ignore="MissingConstraints,NotSibling" />

            <com.example.even3android.views.Joystick
                android:id="@+id/inJoystick"
                android:layout_width="222dp"
                android:layout_height="365dp"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                app:layout_constraintBottom_toTopOf="@+id/rudderBar"
                app:layout_constraintStart_toStartOf="@+id/rudderBar"
                app:layout_constraintTop_toBottomOf="@+id/inConnect" />

            <SeekBar
                android:id="@+id/rudderBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inJoystick" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
